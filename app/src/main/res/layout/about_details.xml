<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:padding="10dp">

    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/about_selector"
        android:padding="5dp"
        android:text="My Home is a user friendly society management application providing a digital platform to organize society's maintenance, meetings, events and issues."
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/mdetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details"
        android:layout_marginTop="10dp"
        android:background="@drawable/about_selector"
        android:padding="5dp"
        android:text="With My Home, you can:\n- Conduct Meetings \\ Events.\n- Raise Issues.\n- Pay Maintenance Charges.\n- Manage Maintenance Charges."
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mdetails"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/about_selector"
            android:padding="5dp"
            android:text="Version:\n1.0"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.5"
            android:background="@drawable/about_selector"
            android:padding="5dp"
            android:text="Size:\n4.20 MB"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>
</RelativeLayout>
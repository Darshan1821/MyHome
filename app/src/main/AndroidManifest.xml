<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dexter.myhome">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".issue.AddIssueActivity"></activity>
        <activity android:name=".event.AddEventActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".auth.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".menu.ProfileActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".issue.IssueActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".event.EventActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".meeting.MeetingActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".maintenance.MaintenanceActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".auth.VerifyMobileActivity" />
        <activity
            android:name=".menu.ApartmentInfoActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".meeting.AddMeetingActivity"
            android:parentActivityName=".meeting.MeetingActivity" />
    </application>

</manifest>